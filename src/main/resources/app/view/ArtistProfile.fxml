<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controller.ArtistProfileController"
            prefWidth="420" prefHeight="360"
            style="-fx-background-color: #1e1e1e; -fx-padding: 20;">

    <top>
        <ImageView fx:id="artistImage"
                   fitWidth="160" preserveRatio="true"
                   BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="artistName" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="artistBio" wrapText="true" style="-fx-text-fill: #cccccc;"/>
        </VBox>
    </center>

    <bottom>
        <Button text="Close"
                onAction="#handleClose"
                maxWidth="Infinity"
                style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>
    </bottom>
</BorderPane>
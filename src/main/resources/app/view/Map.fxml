<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="677.0" prefWidth="589.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.MapController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="51.0" spacing="8" style="-fx-padding: 8; -fx-border-color: transparent transparent white transparent; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
            <TextField fx:id="searchField" onAction="#handleSearch" promptText="Search shops, artists(@username), cities" style="-fx-background-radius: 3; -fx-border-radius: 3;" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <opaqueInsets>
               <Insets />
            </opaqueInsets></TextField>
         <HBox alignment="CENTER_LEFT" maxWidth="-Infinity" prefHeight="50.0" prefWidth="300.0" spacing="8.0">
            <children>
               <Button onAction="#handleSearch" text="Search" />
               <Button onAction="#handleClear" text="Clear" />
            </children>
         </HBox>
        </HBox>
    </top>

    <center>
        <StackPane>
            <StackPane fx:id="mapContainer" StackPane.alignment="CENTER" />
        </StackPane>
    </center>

    <right>
      <AnchorPane>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
              <VBox maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minWidth="-Infinity" spacing="6" style="-fx-padding:8; -fx-min-width:260;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <Label text="Results" />
                  <ListView fx:id="resultsList" cacheShape="false" centerShape="false" editable="true" fixedCellSize="88.0" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefWidth="300.0" scaleShape="false" style="-fx-padding: 0; -fx-background-insets: 0; -fx-border-width: 0;" VBox.vgrow="ALWAYS" />
              </VBox>
         </children>
      </AnchorPane>
    </right>

    <bottom>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-padding:6;">
            <FlowPane hgap="8" vgap="8">
                <Button onAction="#filter" text="#Blackwork" />
                <Button onAction="#filter" text="#Script" />
                <Button onAction="#filter" text="#NeoTraditional" />
                <Button onAction="#filter" text="#Japanese" />
                <Button onAction="#filter" text="#Minimalist" />
                <Button onAction="#filter" text="#Geometric" />
                <Button onAction="#filter" text="#Watercolor" />
                <Button onAction="#filter" text="#Tribal" />
            </FlowPane>
        </ScrollPane>
    </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.MapController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="51.0" spacing="8" style="-fx-padding: 8; -fx-border-color: transparent transparent white transparent; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
            <TextField fx:id="searchField" promptText="Search shops, artists, cities" style="-fx-background-radius: 3; -fx-border-radius: 3;" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <opaqueInsets>
               <Insets />
            </opaqueInsets></TextField>
         <HBox alignment="CENTER_LEFT" maxWidth="244.0" minWidth="244.0" prefHeight="50.0" prefWidth="244.0" spacing="8.0">
            <children>
               <Button onAction="#handleSearch" text="Search" />
               <Button onAction="#handleClear" text="Clear" />
            </children>
         </HBox>
        </HBox>
    </top>

    <center>
        <StackPane>
            <StackPane fx:id="mapContainer" StackPane.alignment="CENTER" />
        </StackPane>
    </center>

    <right>
        <VBox maxWidth="260.0" minWidth="260.0" prefWidth="260.0" spacing="6" style="-fx-padding:8; -fx-min-width:260;">
            <Label text="Results" />
            <ListView fx:id="resultsList" cacheShape="false" centerShape="false" editable="true" fixedCellSize="88.0" scaleShape="false" VBox.vgrow="ALWAYS" style="-fx-padding: 0; -fx-background-insets: 0; -fx-border-width: 0;" />
         <BorderPane.margin>
            <Insets top="-1.0" />
         </BorderPane.margin>
        </VBox>
    </right>

    <bottom>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-padding:6;">
            <FlowPane hgap="8" vgap="8">
                <Button onAction="#filter" text="#Blackwork" />
                <Button onAction="#filter" text="#Script" />
                <Button onAction="#filter" text="#NeoTraditional" />
                <Button onAction="#filter" text="#Japanese" />
                <Button onAction="#filter" text="#Minimalist" />
                <Button onAction="#filter" text="#Geometric" />
                <Button onAction="#filter" text="#Watercolor" />
                <Button onAction="#filter" text="#Tribal" />
            </FlowPane>
        </ScrollPane>
    </bottom>
</BorderPane>

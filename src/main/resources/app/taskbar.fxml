<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="app.controller.TaskbarController"
            style="-fx-background-color: black; -fx-border-color: rgba(15, 23, 42, 0.8); -fx-border-width: 0 1 0 0;"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <VBox alignment="TOP_CENTER">
            <children>
                <Button mnemonicParsing="false"
                        style="-fx-background-color: transparent; -fx-border-color: rgba(255, 255, 255, 1); -fx-border-width: 0 0 1 0; -fx-border-radius: 0;">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/tattui.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <VBox alignment="TOP_CENTER" spacing="8.0">
                    <children>
                        <Button fx:id="workspaceButton"
                                mnemonicParsing="false"
                                onAction="#handleWorkspaceClick"
                                style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-border-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true">
                                    <image>
                                        <Image url="@../icons/workspace.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-border-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true">
                                    <image>
                                        <Image url="@../icons/gallery.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="mapButton"
                                mnemonicParsing="false"
                                onAction="#handleMapClick"
                                style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-border-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true">
                                    <image>
                                        <Image url="@../icons/map.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button mnemonicParsing="false"
                                prefHeight="30.0"
                                prefWidth="30.0"
                                style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-border-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true">
                                    <image>
                                        <Image url="@../icons/explore.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </VBox>
            </children>
        </VBox>
    </top>

    <center>
        <StackPane alignment="CENTER">
            <children>
                <ImageView fitHeight="90.0" fitWidth="36.0" preserveRatio="true" pickOnBounds="true">
                    <image>
                        <Image url="@../icons/sigal.png" />
                    </image>
                </ImageView>
            </children>
        </StackPane>
    </center>

    <bottom>
        <VBox alignment="BOTTOM_CENTER" spacing="10.0">
            <padding>
                <Insets bottom="10.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-border-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true">
                            <image>
                                <Image url="@../icons/login.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-border-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true">
                            <image>
                                <Image url="@../icons/settings.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </bottom>

</BorderPane>

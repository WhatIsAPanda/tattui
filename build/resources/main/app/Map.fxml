<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.controller.MapController">

    <top>
        <HBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding:8;">
            <TextField fx:id="searchField" promptText="Search shops, artists, cities" HBox.hgrow="ALWAYS"/>
            <Button text="Search" onAction="#handleSearch"/>
            <Button text="Clear"  onAction="#handleClear"/>
        </HBox>
    </top>

    <center>
        <StackPane>
            <WebView fx:id="mapView" StackPane.alignment="CENTER"/>
        </StackPane>
    </center>

    <right>
        <VBox spacing="6" style="-fx-padding:8; -fx-min-width:260;">
            <Label text="Results"/>
            <ListView fx:id="resultsList" VBox.vgrow="ALWAYS"/>
        </VBox>
    </right>

    <bottom>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-padding:6;">
            <FlowPane hgap="8" vgap="8">
                <Button text="#Blackwork"       onAction="#filterBlackwork"/>
                <Button text="#Script"          onAction="#filterScript"/>
                <Button text="#NeoTraditional"  onAction="#filterNeoTraditional"/>
                <Button text="#Japanese"        onAction="#filterJapanese"/>
                <Button text="#Minimalist"      onAction="#filterMinimalist"/>
                <Button text="#Geometric"       onAction="#filterGeometric"/>
                <Button text="#Watercolor"      onAction="#filterWatercolor"/>
                <Button text="#Tribal"          onAction="#filterTribal"/>
            </FlowPane>
        </ScrollPane>
    </bottom>
</BorderPane>

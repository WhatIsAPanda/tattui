<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<VBox fx:controller="app.controller.TaskbarController"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER"
      prefWidth="60"
      style="-fx-background-color: black;">

    <opaqueInsets>
        <Insets right="1.0"/>
    </opaqueInsets>

    <children>

        <!-- Top logo -->
        <StackPane prefHeight="50.0" prefWidth="50.0">
            <children>
                <Button fx:id="logoButton"
                        alignment="CENTER"
                        contentDisplay="GRAPHIC_ONLY"
                        mnemonicParsing="false"
                        prefHeight="50.0"
                        prefWidth="50.0"
                        onAction="#handleClick"
                        style="-fx-background-color: transparent; -fx-border-color: transparent;"
                        StackPane.alignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                            <image>
                                <Image url="@../icons/tattui.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </StackPane>

        <!-- Main buttons -->
        <VBox alignment="TOP_CENTER" spacing="5" VBox.vgrow="ALWAYS">
            <children>

                <Line endX="50.0" stroke="WHITE"/>

                <Button fx:id="workspaceButton"
                        mnemonicParsing="false"
                        onAction="#handleClick"
                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-border-width: 0 0 1 0;">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <image><Image url="@../icons/workspace.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="galleryButton"
                        mnemonicParsing="false"
                        onAction="#handleClick"
                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-border-width: 0 0 1 0;">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <image><Image url="@../icons/gallery.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="exploreButton"
                        mnemonicParsing="false"
                        onAction="#handleClick"
                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-border-width: 0 0 1 0;">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <image><Image url="@../icons/explore.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="mapButton"
                        mnemonicParsing="false"
                        onAction="#handleClick"
                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-border-width: 0 0 1 0;">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <image><Image url="@../icons/map.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>

        <!-- Center symbol -->
        <ImageView fitHeight="100.0" fitWidth="40.0" preserveRatio="true">
            <image><Image url="@../icons/sigal.png"/></image>
        </ImageView>

        <!-- Bottom section -->
        <VBox alignment="BOTTOM_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
            <padding><Insets top="10.0"/></padding>
            <children>
                <Button fx:id="loginButton"
                        mnemonicParsing="false"
                        onAction="#handleClick"
                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-border-width: 0 0 1 0;"
                        prefHeight="30.0" prefWidth="30.0">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <image><Image url="@../icons/login.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="settingsButton"
                        mnemonicParsing="false"
                        onAction="#handleClick"
                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-border-width: 0 0 1 0;"
                        prefHeight="30.0" prefWidth="30.0">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <image><Image url="@../icons/settings.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </children>
</VBox>
